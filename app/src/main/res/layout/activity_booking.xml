<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FF9800"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_revert"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Booking Baru"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Customer Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. Pilih Pelanggan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />

            <Button
                android:id="@+id/btnSelectCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Pelanggan"
                android:textAlignment="textStart"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#4CAF50" />

            <!-- Trip Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2. Pilih Perjalanan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp" />

            <Button
                android:id="@+id/btnSelectTrip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Perjalanan"
                android:textAlignment="textStart"
                android:drawableRight="@android:drawable/arrow_down_float"
                android:padding="16dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#2196F3" />

            <!-- Seat Selection Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3. Pilih Kursi"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp" />

            <!-- Seat Layout -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Row 1: 1 | X | Supir -->
                    <LinearLayout
                        android:id="@+id/seatRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Row 2: 4 | 3 | 2 -->
                    <LinearLayout
                        android:id="@+id/seatRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Row 3: 7 | 6 | 5 -->
                    <LinearLayout
                        android:id="@+id/seatRow3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp" />

                    <!-- Row 4: 10 | 9 | 8 -->
                    <LinearLayout
                        android:id="@+id/seatRow4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Legend -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="ðŸŸ¢ Tersedia"
                    android:textSize="14sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="âš« Terisi"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Create Booking Button -->
    <Button
        android:id="@+id/btnCreateBooking"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="16dp"
        android:text="ðŸŽ« BUAT BOOKING"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#FF5722" />

</LinearLayout>